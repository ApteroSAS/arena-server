{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2017",
    "module": "CommonJS",
    "strict": true,
    "allowJs": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false
  },
  "include": [
    "src"
  ]
}
